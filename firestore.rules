rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    // Lobbies — any authenticated user can read/write
    match /lobbies/{lobbyId} {
      allow read, write: if request.auth != null;

      // Per-player answer logs and group question logs
      match /logs/{logId} {
        allow create: if request.auth != null && (
          // Individual player logs: must match current user
          (request.resource.data.playerId != '__team__'
           && request.auth.uid == request.resource.data.playerId)
          // Group question logs: any authenticated user can write (team facilitator)
          || (request.resource.data.playerId == '__team__'
              && request.resource.data.isGroupQuestion == true)
        );
        allow read: if request.auth != null;
      }
    }

    // Event leaderboard scores — authenticated users can read all,
    // write only their own score document
    match /events/{eventId}/scores/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                  && request.auth.uid == uid;
    }

    // Team aggregate scores — any authenticated user can read,
    // any authenticated user can write (each player upserts their own team's doc)
    match /teams/{teamName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
