{
  "id": "incident-response",
  "title": "Outage Incident Triage",
  "description": "A critical service is down. Your team must quickly identify, analyze, and remediate the issue.",
  "subScenarios": {
    "software-engineer": {
      "type": "binary-choice",
      "title": "Which Incident‐Response Step Do You Prioritize?",
      "instruction": "When an outage hits, which step do you tackle first?",
      "options": [
        {
          "id": "ack",
          "label": "Acknowledge Alert",
          "axisImpact": {
            "Speed": 1,
            "Precision": -0.5,
            "Stability": -1,
            "Autonomy": 0.5
          }
        },
        {
          "id": "logs",
          "label": "Gather Logs",
          "axisImpact": {
            "Precision": 1,
            "Innovation": 0.2,
            "Autonomy": 1,
            "Collaboration": 0.3
          }
        },
        {
          "id": "rootcause",
          "label": "Identify Root Cause",
          "axisImpact": {
            "Innovation": 1,
            "Precision": 0.5,
            "Speed": -0.7,
            "Collaboration": 0.4
          }
        },
        {
          "id": "deployfix",
          "label": "Deploy Fix",
          "axisImpact": {
            "Speed": 1,
            "Performance-First": 0.8,
            "Cost-Conscious": 0.2
          }
        }
      ]
    },
    "data-scientist": {
      "type": "binary-choice",
      "title": "Interpret Error Spike",
      "instruction": "Error counts over the past minutes: [5, 8, 20, 50].\n\nWhich “percent increase” formula do you trust most if you care about reliability vs. speed vs. simplicity?",
      "options": [
        {
          "id": "simple-percentage",
          "label": "(50−20)/20 × 100 = 150%",
          "axisImpact": { "Precision": 1, "Stability": 0.5, "Performance-First": 0.5 }
        },
        {
          "id": "log-growth",
          "label": "Use log‐based growth formula ln(50/20) × 100",
          "axisImpact": { "Innovation": 1, "Precision": -0.5, "Autonomy": 0.5 }
        },
        {
          "id": "rolling-window",
          "label": "Compute rolling‐average‐then‐difference",
          "axisImpact": { "Collaboration": 0.5, "Cost-Conscious": 0.5 }
        },
        {
          "id": "approximation",
          "label": "Use approximated 2× rule (since 20→50 is ~150%)",
          "axisImpact": { "Speed": 1, "Precision": -0.5 }
        }
      ]
    },
    "cloud-engineer": {
      "type": "binary-choice",
      "title": "Mitigate Traffic Burst",
      "instruction": "Traffic has spiked causing latency. Which action do you take to mitigate the spike?",
      "options": [
        {
          "id": "autoscale",
          "label": "Autoscale Instances",
          "axisImpact": { "Performance-First": 1, "Cost-Conscious": -1, "Precision": 0.5 }
        },
        {
          "id": "rollback",
          "label": "Rollback Last Deploy",
          "axisImpact": { "Stability": 1, "Speed": -1, "Collaboration": 0.5 }
        },
        {
          "id": "circuit-breaker",
          "label": "Enable Circuit Breaker",
          "axisImpact": { "Innovation": -1, "Cost-Conscious": -1, "Autonomy": 0.5, "Collaboration": 1 }
        },
        {
          "id": "divert-traffic",
          "label": "Divert Traffic to Backup Region",
          "axisImpact": { "Cost-Conscious": -1, "Performance-First": 1, "Speed": 1, "Collaboration": 0.5 }
        }
      ]
    }
  }
}
