          "label": "Add Redis Cache Layer",
          "axisImpact": { "Performance-First": 1, "Cost-Conscious": -1, "Stability": 0.5 }
        },
        {
          "id": "db-index",
          "label": "Add DB Indexes",
          "axisImpact": { "Precision": 1, "Innovation": -1, "Cost-Conscious": -1 }
        },
        {
          "id": "read-replica",
          "label": "Create Read Replica",
          "axisImpact": { "Performance-First": 1, "Cost-Conscious": -1, "Collaboration": -1, "Autonomy": 0.5 }
        },
        {
          "id": "optimize-query",
          "label": "Rewrite Query for Efficiency",
          "axisImpact": { "Precision": 1, "Speed": 1, "Innovation": -1 }
        }
      ]
