{
  "id": "performance-tuning",
  "title": "Optimize API Throughput",
  "description": "Users complain of slow API responses. Your team needs to pinpoint and optimize the bottleneck.",
  "subScenarios": {
    "software-engineer": {
      "type": "binary-choice",
      "title": "Optimize Handler Order",
      "instruction": "In your request handler, what will you do to best balance performance & reliability?",
      "options": [
        {
          "id": "cache-first",
          "label": "Check Cache before parsing request",
          "axisImpact": {
            "Precision": 1,
            "Cost-Conscious": 0.1,
            "Stability": 1,
            "Collaboration": 0.2
          }
        },
        {
          "id": "parse-first",
          "label": "Parse Request before checking cache",
          "axisImpact": {
            "Precision": 1,
            "Performance-First": 0.5,
            "Autonomy": 0.3 
          }
        },
        {
          "id": "db-first",
          "label": "Fetch from DB, then cache, then respond",
          "axisImpact": {
            "Performance-First": 1,
            "Speed": 1,
            "Precision": -0.5,
            "Collaboration": 0.2
          }
        },
        {
          "id": "respond-immediately",
          "label": "Respond immediately (defer parsing/cache)",
          "axisImpact": {
            "Speed": 1,
            "Autonomy": 0.5,
            "Stability": -0.5,
            "Innovation": 0.2,
            "Collaboration": 0.3
          }
        }
      ]
    },
    "data-scientist": {
      "type": "binary-choice",
      "title": "Summarize Endpoint Latencies",
      "instruction": "Mean latencies: {login: 120, fetchProfile: 300, getFeed: 500}.\n\nWhich summary method best matches your workflow?",
      "options": [
        {
          "id": "weighted-average",
          "label": "Weighted by traffic volume per endpoint",
          "axisImpact": { "Precision": 1, "Innovation": -0.5, "Cost-Conscious": 0.5 }
        },
        {
          "id": "simple-average",
          "label": "Arithmetic Mean (quick snapshot)",
          "axisImpact": { "Speed": 1, "Precision": -0.5, "Performance-First": 0.5 }
        },
        {
          "id": "peak-500",
          "label": "Report the worst latency (500 ms)",
          "axisImpact": { "Stability": 0.5, "Collaboration": 0.5 }
        },
        {
          "id": "median",
          "label": "Median across endpoints (300 ms)",
          "axisImpact": { "Stability": 1, "Autonomy": 0.5, "Performance-First": 0.5 }
        }
      ]
    },
    "cloud-engineer": {
      "type": "binary-choice",
      "title": "Enable Caching or Increase DB Size?",
